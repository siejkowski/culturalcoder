<?xml version="1.0"?>
<feed xmlns="http://www.w3.org/2005/Atom">
 
  <title>{{ site.name }}</title>
  <link href="{{ site.url }}/"/>
  <link type="application/atom+xml" rel="self" href="{{ site.url }}/atom.xml"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ site.url }}/</id>
  <author>
    <name>{{ site.author }}</name>
  </author>
  <icon>{{ site.url }}/favicon.ico</icon>
  <logo>{{ site.url }}/favicon.ico</logo>
 
  {% for post in site.posts limit:50 %}
  <entry>
    <id>{{ site.url }}{{ post.id }}</id>
    <link type="text/html" rel="alternate" href="{{ site.url }}{{ post.url }}"/>
    <title>{{ post.title | xml_escape }}</title>
    <published>{{ post.date | date_to_xmlschema }}</published>
    <updated>{% if post.update %}{{ post.update | date_to_xmlschema }}{% else %}{{ post.date | date_to_xmlschema }}{% endif %}</updated>
    <author>
      <name>{{ site.author }}</name>
      <uri>{{ site.url }}</uri>
    </author>
    <content type="html">{{ post.content | xml_escape }}</content>
  </entry>
  {% endfor %}
 
</feed>
